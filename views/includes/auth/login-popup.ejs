<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="joinupModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <img src="/img/logoheader.png" alt="" draggable="false">
            </div>
            <div class="modal-body modal-body-own-settings">
                <form method="post" action="/auth/login">
                    <div class="form-group">
                        <input type="text"
                               class="form-control"
                               id="loginModalInputLogin"
                               name="userLoginOrEmail"
                               placeholder="Login albo email"
                               autocomplete="login" required>
                    </div>

                    <div class="form-group">
                        <input type="password"
                               class="form-control"
                               id="loginModalInputPassword"
                               name="userPassword"
                               placeholder="Hasło"
                               autocomplete="password"
                               required>
                    </div>

                    <div class="form-group">
                        <button class="btn submit-button log-in-button">Zaloguj</button>
                        <a data-toggle="modal" data-target="#recoveryModal" class="restore-password">zapomniałeś hasła?</a></div>
                </form>
            </div>
        </div>
    </div>
</div>
