<div class="modal fade" id="joinupModal" tabindex="-1" role="dialog" aria-labelledby="joinupModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <img src="/img/logoheader.png" alt="" draggable="false">
            </div>

            <div class="modal-body modal-body-own-settings">
                <form method="post" action="/auth/joinup">
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" id="RegInputName" name="RegInputName" placeholder="Imię" required>
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" id="RegInputSurname" name="RegInputSurname" placeholder="Nazwisko" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col"><input type="number" class="form-control" id="RegInputYear" name="RegInputYear" placeholder="Rok urodzenia" required></div>
                            <div class="col"><input type="number" class="form-control" id="RegInputMonth" name="RegInputMonth" placeholder="Miesiąc" required></div>
                            <div class="col"><input type="number" class="form-control" id="RegInputDay" name="RegInputDay" placeholder="Dzień" required></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" id="RegInputCity" name="RegInputCity" placeholder="Miasto" required>
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" id="RegInputLogin" name="RegInputLogin" placeholder="Login" required>
                        <span id="loginExistenceMessage" style="display: none;">ten login już istnieje</span>
                    </div>

                    <div class="form-group">
                        <input type="email" class="form-control" id="RegInputEmail" name="RegInputEmail" placeholder="Email" required>
                        <span id="emailExistenceMessage" style="display: none;">ten email już istnieje</span>
                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" id="RegInputPassword" name="RegInputPassword" placeholder="Hasło" required>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn submit-button join-up-button">Zarejestruj się</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
