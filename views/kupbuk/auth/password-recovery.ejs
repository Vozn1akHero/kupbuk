<%- include('../../includes/head') %>

</head>

<body>
<div class="password-recovery-page">
    <%- include('../../includes/main-header-nli') %>

    <section class="password-recovery-page__password-recovery-sec">
        <div class="password-recovery-page__password-recovery-sec__window-wrapper
        col-11 col-sm-7 col-md-7 col-lg-6 col-xl-4">
            <div class="password-recovery-page__password-recovery-sec__header pt-4 pb-4">
                <h4>Resetowanie hasła</h4>
                <svg class="ml-4">
                    <use xlink:href="/img/icons/symbol-defs.svg#icon-spinner11"></use>
                </svg>
            </div>
            <div class="password-recovery-page__password-recovery-sec__controls-sec">
                <form method="post" action="/auth/password-recovery-request">
                    <div class="form-group">
                        <input type="text"
                               class="form-control"
                               id="passRecInputEmail"
                               name="userEmail"
                               placeholder="Email"
                               autocomplete="off"
                               required>
                    </div>

                    <div class="form-group d-flex justify-content-center">
                        <button class="btn submit-button confirm-button">Potwierdź</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <%- include('../../includes/footer') %>
</div>
</body>
