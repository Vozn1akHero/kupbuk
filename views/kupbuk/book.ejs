<%- include('../includes/head') %>


</head>

<body>

<div class="book-page">
    <% if(loggedIn) { %>
        <%- include('../includes/main-header-li') %>
    <% } else { %>
        <%- include('../includes/main-header-nli') %>
    <% } %>

    <div class="col-12 col-md-12 col-lg-12 col-xl-12 mt-5 mb-5">
        <div class="book-section row align-items-center justify-content-center">

            <% if(book.purchaseStatus) { %>
                <div class="row col-sm-9 col-md-12 col-lg-12 col-xl-12 align-items-center justify-content-center">
                    <div class="alert alert-warning col-6 mb-4" role="alert">
                        Ta oferta nie jest aktywna
                    </div>
                </div>
            <% } %>

            <div class="row col-sm-9 col-md-12 col-lg-12 col-xl-12 align-items-center justify-content-center">
                <div class="col-xs-4 col-md-4 col-lg-3 col-xl-3 bg-light book-section__main-info-block-1 mr-4">
                    <div class="book-section__book-cover">
                        <div class="book-section__price">
                            <%= book.price %> ZŁ
                        </div>

                        <img src="<%= book.thumbnailUrl %>" alt="Book's cover">
                    </div>

                    <span class="book-section__city book-section__main-data-row">
                        <svg>
                            <use xlink:href="img/icons/symbol-defs.svg#icon-location"></use>
                        </svg>

                        <%= book.city %>
                    </span>

                    <span class="book-section__date book-section__main-data-row">
                        <svg>
                            <use xlink:href="img/icons/symbol-defs.svg#icon-calendar"></use>
                        </svg>

                        <%= book.publishDate %>
                    </span>
                </div>

                <div class="book-section__main-info col-xs-7 col-md-7 col-lg-4 col-xl-4 mt-4">
                    <h4 class="book-section__title">
                        <%= book.title %>
                    </h4>

                    <p class="book-section__author">
                        <%= book.author %>
                    </p>

                    <p class="book-section__description">
                        <%= book.description %>
                    </p>

                    <div class="book-section__order-options mt-5 card">
                        <div class="book-section__order-options__seller-data card-body">
                            <div class="book-section__order-options__seller-data__md
                             mb-1 row align-items-center justify-content-center flex-column">
                                <img src="<%= book.sellerAvatar %>" alt="seller's avatar">
                                <h5 class="mt-1">
                                    <%= book.sellerFirstName %> <%= book.sellerLastName %>
                                </h5>
                            </div>

                            <div class="book-section__order-options__seller-data__maild
                             row align-items-center justify-content-center">
                                <svg class="mr-2">
                                    <use xlink:href="img/icons/symbol-defs.svg#icon-mail3"></use>
                                </svg>

                                <%= book.sellerEmail %>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="row">
                <table class="table book-section__table table-responsive-xs">
                    <tbody>
                    <tr>
                        <td>Liczba stron</td>
                        <td id="book-section__table--pageamount">
                            <%= book.amountOfPages %>
                        </td>
                    </tr>
                    <tr>
                        <td>Język wydania</td>
                        <td id="book-section__table--language">
                            <%= book.language %>
                        </td>
                    </tr>
                    <tr>
                        <td>Numer wydania</td>
                        <td id="book-section__table--releasenum">
                            <%= book.publishNumber %>
                        </td>
                    </tr>
                    <tr>
                        <td>Typ okładki</td>
                        <td id="book-section__table--covertype">
                            <%= book.coverTitle === "Hardcover" ? "Twarda" : "Miękka" %>
                        </td>
                    </tr>
                    <tr>
                        <td>Kategoria</td>
                        <td id="book-section__table--category">
                            <%= book.categoryTitle %>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <%- include('../includes/footer') %>

</div>

</body>
</html>
